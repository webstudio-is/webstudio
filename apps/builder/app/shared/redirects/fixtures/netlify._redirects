# Netlify _redirects Format - Comprehensive Test Fixture
# ========================================================
# Syntax: /from /to [status]
# Official docs: https://docs.netlify.com/routing/redirects/

# -----------------------------------------------------------------
# BASIC REDIRECTS (supported)
# -----------------------------------------------------------------

# Simple permanent redirects (301)
/home /
/about-us /about 301
/contact-us /contact 301

# Temporary redirects (302)
/sale /offers 302
/promo /campaigns 302

# No status code (defaults to 301)
/default /target

# External URL redirects
/github https://github.com/example/repo 301
/twitter https://twitter.com/example

# -----------------------------------------------------------------
# COMMENTS AND WHITESPACE
# -----------------------------------------------------------------

# This is a comment
  # Indented comment

   /indented-source /indented-target 301

/lots-of-space    /destination   301

# Empty lines are ignored


# -----------------------------------------------------------------
# STATUS CODES
# -----------------------------------------------------------------

/moved /new-location 301
/found /temporary 302
/temp-redirect /temp 307
/perm-redirect /perm 308

# -----------------------------------------------------------------
# PATH PATTERNS (skipped - unsupported)
# -----------------------------------------------------------------

# Splat wildcards
/blog/* /posts/:splat 301
/old-docs/* /docs/:splat

# Placeholders
/news/:year/:month/:day/:slug /blog/:year-:month-:day-:slug 301
/products/:category/:id /shop/:category/item/:id

# Mixed patterns from real-world (Astro docs)
/:lang/install/auto /:lang/install-and-setup/
/:lang/guides/deploy/:service /:lang/deploy/:service
/docs/* /:splat
/:lang/docs/* /:lang/:splat

# -----------------------------------------------------------------
# CONDITIONS (skipped - unsupported)
# -----------------------------------------------------------------

# Country-based
/ /en 302 Country=us,ca,gb
/ /de 302 Country=de,at,ch

# Language-based
/products /en/products 301 Language=en

# Role-based
/admin/* /login 302 Role=admin

# -----------------------------------------------------------------
# REWRITES (skipped - status 200)
# -----------------------------------------------------------------

/api/* https://api.example.com/:splat 200

# -----------------------------------------------------------------
# FORCE REDIRECTS (the ! is ignored, redirect is processed)
# -----------------------------------------------------------------

/override /new-override 301!

# -----------------------------------------------------------------
# QUERY PARAMETER MATCHING (skipped - unsupported)
# -----------------------------------------------------------------

/store id=:id /products/:id 301
/search q=:query /results?search=:query

# -----------------------------------------------------------------
# TRAILING SLASH HANDLING
# -----------------------------------------------------------------

# Will be normalized (trailing slash stripped from source)
/old-path/ /new-path 301

# -----------------------------------------------------------------
# 404 CATCH-ALLS (skipped - status 404)
# -----------------------------------------------------------------

/:lang/* /:lang/404/ 404

